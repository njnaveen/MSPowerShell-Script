##creating Excelsheel from the PS command for output.
$a= New-Object -ComObject excel.application
$a.visible = $true
$b = $a.workbooks.add()
$c = $b.worksheets.item(1)
$c.cells.item(1,1) = "Machine Name"
$c.cells.item(1,2) = "Caption"
$c.cells.item(1,3) = "Desc"


